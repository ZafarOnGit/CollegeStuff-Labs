print("Select a country by entering its corresponding number");
print("1. United Arab Emirates");
print("2. Japan");
print("3. Germany");

choice = int (input("Enter the number of your choice: "));

match (choice):
    case 1: 
        print("The capital of United Arab Emirates is Abu Dhabi");
    case 2: 
        print("The capital of Japan is Tokyo");
    case 3: 
        print("The capital of Germany is Berlin");
    case _:
        print("PLEASE ENTER A VALID CHOICE")